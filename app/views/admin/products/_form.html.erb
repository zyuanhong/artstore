<div class="form-group">
  <%= f.label "標題", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label "敘述", class: "col-sm-2 control-label" %>
  <%= f.text_area :description, rows: 5, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label "數量", class: "col-sm-2 control-label" %>
  <%= f.text_field :quantity %>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "送出", disable_with: "...", class: "btn btn-primary" %>
  </div>
</div>
